{
  "name": "better_than_predator",
  "title": "Better than Predator",
  "version": "1.0.0",
  "description": "Is it better than Predator?",
  "homepage": "http://betterthanpredator.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/linssen/better_than_predator.git"
  },
  "contributors": [
    {
      "name": "Wil Linssen",
      "website": "http://linssen.me/"
    }
  ],
  "author": "Wil Linssen",
  "license": "Creative Commons 3",
  "readmeFilename": "README.md",
  "devDependencies": {
    "babel-jest": "^13.2.2",
    "babel-polyfill": "^6.9.1",
    "concurrently": "^2.2.0",
    "jest-cli": "^13.2.3",
    "react-addons-test-utils": "^15.2.1",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "build": "browserify ./static/scripts/main.js -o ./static/dist/scripts/bundle.js -t babelify",
    "watch:scripts": "watchify ./static/scripts/main.js -o ./static/dist/scripts/bundle.js -t babelify -v",
    "css": "node-sass ./static/styles/main.scss -o ./static/dist/styles",
    "watch:css": "node-sass ./static/styles/main.scss -o ./static/dist/styles -w",
    "watch": "concurrently --kill-others 'npm run watch:css' 'npm run watch:scripts'",
    "test": "jest"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "jquery": "^3.1.0",
    "node-sass": "^3.8.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-router": "^2.5.2",
    "reactify": "^1.1.1"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ],
    "verbose": true,
    "testPathDirs": [
      "<rootDir>/static/scripts"
    ]
  }
}
