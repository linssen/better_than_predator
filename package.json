{
  "name": "better_than_predator",
  "title": "Better than Predator",
  "version": "1.0.0",
  "description": "Is it better than Predator?",
  "homepage": "http://betterthanpredator.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/linssen/better_than_predator.git"
  },
  "contributors": [
    {
      "name": "Wil Linssen",
      "website": "http://linssen.me/"
    }
  ],
  "author": "Wil Linssen",
  "license": "MIT",
  "readmeFilename": "README.md",
  "devDependencies": {
    "babel-jest": "*",
    "babel-polyfill": "*",
    "babel-preset-stage-0": "*",
    "concurrently": "*",
    "jest-cli": "*",
    "react-addons-test-utils": "*",
    "watchify": "*"
  },
  "scripts": {
    "build": "browserify ./static/scripts/main.js -o ./static/dist/scripts/bundle.js -t babelify",
    "watch:scripts": "watchify ./static/scripts/main.js -o ./static/dist/scripts/bundle.js -t babelify -v",
    "css": "node-sass ./static/styles/main.scss -o ./static/dist/styles",
    "watch:css": "node-sass ./static/styles/main.scss -o ./static/dist/styles -w",
    "watch": "concurrently --kill-others 'yarn run watch:css' 'yarn run watch:scripts'",
    "test": "jest",
    "snyk-protect": "snyk protect",
    "prepublish": "yarn run snyk-protect"
  },
  "dependencies": {
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "babelify": "*",
    "jquery": "*",
    "node-sass": "*",
    "react": "*",
    "react-dom": "*",
    "react-router": "*",
    "reactify": "*",
    "snyk": "*"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils",
      "<rootDir>/node_modules/fbjs"
    ],
    "verbose": true,
    "testPathDirs": [
      "<rootDir>/static/scripts"
    ]
  },
  "snyk": true
}
